{
  "name": "server",
  "version": "0.1.0",
  "engines": {
    "node": "12.x"
  },
  "private": true,
  "description": "Template for ExpressJS API with Mongoose for Web and Mobile Engineering (DIT341)",
  "main": "./src/app.js",
  "scripts": {
    "start": "node ./src/app.js",
    "dev": "nodemon ./src/app.js",
    "lint": "eslint .",
    "test": "cross-env-shell MONGODB_URI=mongodb://localhost:27017/programmr \"npm run newman-server\"",
    "ci-test": "npm run newman-server",
    "newman-server": "cross-env-shell PORT=3001 \"npm run init-db && run-p --race start newman-wait\"",
    "newman-wait": "wait-on http://localhost:3001/ && npm run newman",
    "newman": "newman run ./tests/ProgrammrAPITest.postman_collection.json --env-var host=http://localhost:3001",
    "init-db": "node ./tests/init_db.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/dit341/group-00-web.git"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "connect-history-api-fallback": "^1.6.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "joi": "^17.4.2",
    "lodash": "^4.17.21",
    "mongoose": "^5.13.8",
    "mongoose-findorcreate": "^3.0.0",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-google-oauth20": "^2.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "migrate-mongo": "^8.2.3",
    "newman": "^5.2.4",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "wait-on": "^5.3.0"
  }
}
